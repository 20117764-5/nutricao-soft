'use client';

import { useState } from 'react';
import { 
  Search, 
  Plus, 
  MoreHorizontal, 
  Phone, 
  Calendar as CalendarIcon, 
  User,
  Cake
} from 'lucide-react';
import { 
  BarChart, 
  Bar, 
  XAxis, 
  YAxis, 
  CartesianGrid, 
  Tooltip, 
  ResponsiveContainer 
} from 'recharts';

// --- DADOS MOCKADOS (Fict√≠cios para visualizar o layout antes do Banco de Dados) ---
const PACIENTES_MOCK = [
  { id: 1, nome: 'Ana Silva', telefone: '(11) 99999-0000', ultimo_retorno: '10/01/2026', status: 'Ativo', aniversario: false },
  { id: 2, nome: 'Carlos Oliveira', telefone: '(11) 98888-1111', ultimo_retorno: '15/01/2026', status: 'Em Acompanhamento', aniversario: true },
  { id: 3, nome: 'Beatriz Santos', telefone: '(21) 97777-2222', ultimo_retorno: '20/01/2026', status: 'Inativo', aniversario: false },
  { id: 4, nome: 'Jo√£o Souza', telefone: '(31) 96666-3333', ultimo_retorno: '22/01/2026', status: 'Ativo', aniversario: false },
  { id: 5, nome: 'Fernanda Lima', telefone: '(41) 95555-4444', ultimo_retorno: '24/01/2026', status: 'Ativo', aniversario: true },
];

const DADOS_GRAFICO = [
  { nome: 'Ago', consultas: 20 },
  { nome: 'Set', consultas: 35 },
  { nome: 'Out', consultas: 28 },
  { nome: 'Nov', consultas: 45 },
  { nome: 'Dez', consultas: 30 },
  { nome: 'Jan', consultas: 55 },
];

export default function PaginaPacientes() {
  const [termoBusca, setTermoBusca] = useState('');
  const [filtroAtivo, setFiltroAtivo] = useState<'todos' | 'aniversariantes'>('todos');

  // L√≥gica simples de filtro
  const pacientesFiltrados = PACIENTES_MOCK.filter((paciente) => {
    const correspondeBusca = paciente.nome.toLowerCase().includes(termoBusca.toLowerCase()) || 
                             paciente.telefone.includes(termoBusca);
    
    if (filtroAtivo === 'aniversariantes') {
      return correspondeBusca && paciente.aniversario;
    }
    return correspondeBusca;
  });

  return (
    <div className="space-y-8">
      
      {/* --- BLOCO 1: SEUS PACIENTES --- */}
      <div className="bg-white rounded-xl shadow-sm border border-nutri-100 overflow-hidden">
        
        {/* Header do Bloco */}
        <div className="p-6 border-b border-nutri-50 flex flex-col sm:flex-row sm:items-center justify-between gap-4">
          <div>
            <h2 className="text-xl font-bold text-nutri-dark flex items-center gap-2">
              <User className="w-5 h-5 text-nutri-primary" />
              Seus Pacientes
            </h2>
            <p className="text-sm text-gray-500 mt-1">Gerencie os prontu√°rios e dados cadastrais.</p>
          </div>
          
          <button className="flex items-center justify-center gap-2 bg-nutri-primary hover:bg-green-600 text-white px-4 py-2.5 rounded-lg font-medium transition-colors shadow-sm active:transform active:scale-95">
            <Plus className="w-4 h-4" />
            Adicionar Paciente
          </button>
        </div>

        {/* Barra de Ferramentas (Abas e Busca) */}
        <div className="p-4 bg-nutri-50/50 flex flex-col sm:flex-row gap-4 justify-between items-center">
          
          {/* Abas de Filtro */}
          <div className="flex bg-white rounded-lg p-1 shadow-sm border border-gray-100 w-full sm:w-auto">
            <button 
              onClick={() => setFiltroAtivo('todos')}
              className={`flex-1 sm:flex-none px-4 py-1.5 text-sm font-medium rounded-md transition-all ${
                filtroAtivo === 'todos' 
                  ? 'bg-nutri-100 text-nutri-dark shadow-sm' 
                  : 'text-gray-500 hover:text-gray-700'
              }`}
            >
              Ver Todos
            </button>
            <button 
              onClick={() => setFiltroAtivo('aniversariantes')}
              className={`flex-1 sm:flex-none flex items-center justify-center gap-2 px-4 py-1.5 text-sm font-medium rounded-md transition-all ${
                filtroAtivo === 'aniversariantes' 
                  ? 'bg-nutri-100 text-nutri-dark shadow-sm' 
                  : 'text-gray-500 hover:text-gray-700'
              }`}
            >
              <Cake className="w-3.5 h-3.5" />
              Aniversariantes
            </button>
          </div>

          {/* Campo de Busca */}
          <div className="relative w-full sm:w-72">
            <div className="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <Search className="h-4 w-4 text-gray-400" />
            </div>
            <input
              type="text"
              placeholder="Buscar por nome, CPF ou tel..."
              value={termoBusca}
              onChange={(e) => setTermoBusca(e.target.value)}
              className="block w-full pl-10 pr-3 py-2 border border-gray-200 rounded-lg leading-5 bg-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-nutri-primary focus:border-transparent sm:text-sm transition-shadow"
            />
          </div>
        </div>

        {/* Tabela de Listagem */}
        <div className="overflow-x-auto">
          <table className="min-w-full divide-y divide-gray-100">
            <thead className="bg-gray-50">
              <tr>
                <th className="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Paciente</th>
                <th className="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Contato</th>
                <th className="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">√öltimo Retorno</th>
                <th className="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Status</th>
                <th className="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">A√ß√µes</th>
              </tr>
            </thead>
            <tbody className="bg-white divide-y divide-gray-50">
              {pacientesFiltrados.length > 0 ? (
                pacientesFiltrados.map((paciente) => (
                  <tr key={paciente.id} className="hover:bg-nutri-50/30 transition-colors group">
                    <td className="px-6 py-4 whitespace-nowrap">
                      <div className="flex items-center">
                        <div className="flex-shrink-0 h-9 w-9 bg-nutri-200 rounded-full flex items-center justify-center text-nutri-dark font-bold text-sm">
                          {paciente.nome.charAt(0)}
                        </div>
                        <div className="ml-4">
                          <div className="text-sm font-medium text-gray-900">{paciente.nome}</div>
                          {paciente.aniversario && (
                            <span className="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                              üéÇ Anivers√°rio
                            </span>
                          )}
                        </div>
                      </div>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <div className="flex items-center gap-1">
                        <Phone className="w-3 h-3" />
                        {paciente.telefone}
                      </div>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {paciente.ultimo_retorno}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <span className="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        {paciente.status}
                      </span>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <button className="text-gray-400 hover:text-nutri-primary transition-colors p-1 rounded-full hover:bg-nutri-100">
                        <MoreHorizontal className="w-5 h-5" />
                      </button>
                    </td>
                  </tr>
                ))
              ) : (
                <tr>
                  <td colSpan={5} className="px-6 py-10 text-center text-gray-500">
                    Nenhum paciente encontrado com esses filtros.
                  </td>
                </tr>
              )}
            </tbody>
          </table>
        </div>
        
        <div className="bg-gray-50 px-6 py-3 border-t border-gray-100 text-xs text-gray-500 text-center sm:text-right">
          Mostrando os 5 pacientes mais recentes
        </div>
      </div>

      {/* --- BLOCO 2: HIST√ìRICO DE CONSULTAS --- */}
      <div className="bg-white rounded-xl shadow-sm border border-nutri-100 p-6">
        <div className="mb-6">
          <h3 className="text-lg font-bold text-nutri-dark flex items-center gap-2">
            <CalendarIcon className="w-5 h-5 text-nutri-primary" />
            Hist√≥rico de Consultas
          </h3>
          <p className="text-sm text-gray-500">Volume de atendimentos nos √∫ltimos 6 meses.</p>
        </div>

        <div className="h-64 w-full">
          <ResponsiveContainer width="100%" height="100%">
            <BarChart data={DADOS_GRAFICO}>
              <CartesianGrid strokeDasharray="3 3" vertical={false} stroke="#f0f0f0" />
              <XAxis 
                dataKey="nome" 
                axisLine={false} 
                tickLine={false} 
                tick={{ fill: '#6b7280', fontSize: 12 }} 
                dy={10}
              />
              <YAxis 
                axisLine={false} 
                tickLine={false} 
                tick={{ fill: '#6b7280', fontSize: 12 }} 
              />
              <Tooltip 
                cursor={{ fill: '#f2fcf5' }}
                contentStyle={{ borderRadius: '8px', border: 'none', boxShadow: '0 4px 6px -1px rgb(0 0 0 / 0.1)' }}
              />
              <Bar 
                dataKey="consultas" 
                fill="#22c55e" 
                radius={[4, 4, 0, 0]} 
                barSize={40}
              />
            </BarChart>
          </ResponsiveContainer>
        </div>
      </div>
    </div>
  );
}